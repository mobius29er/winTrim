                <Run FontWeight="Bold">use this software at my own risk</Run>
                <Run>.</Run>
            </TextBlock>
        </CheckBox>
        
        <!-- Buttons -->
        <Grid Grid.Row="3" ColumnDefinitions="*,Auto,Auto" Margin="0,16,0,0">
            <TextBlock Grid.Column="0" 
                       Text="Â© 2026 Foxxception LLC" 
                       Foreground="{DynamicResource TextMutedBrush}"
                       VerticalAlignment="Center"
                       FontSize="11"/>
            
            <Button Grid.Column="1" 
                    Content="Decline &amp; Exit" 
                    Click="Decline_Click"
                    Padding="20,10" 
                    Margin="0,0,8,0"
                    Background="{DynamicResource SurfaceBrush}"
                    Foreground="{DynamicResource TextPrimaryBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"/>
            
            <Button x:Name="AcceptButton" 
                    Grid.Column="2" 
                    Content="I Accept" 
                    Click="Accept_Click"
                    Padding="24,10"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"
                    FontWeight="SemiBold"
                    IsEnabled="False"/>
