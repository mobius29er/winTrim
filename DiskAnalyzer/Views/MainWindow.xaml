<Window x:Class="DiskAnalyzer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:DiskAnalyzer.ViewModels"
        xmlns:conv="clr-namespace:DiskAnalyzer.Converters"
        xmlns:ctrl="clr-namespace:DiskAnalyzer.Controls"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        mc:Ignorable="d"
        Title="Disk Analyzer - WinLose" 
        Height="800" Width="1280"
        MinHeight="600" MinWidth="900"
        Background="{DynamicResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen">
    
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    
    <Window.Resources>
        <conv:FileSizeConverter x:Key="FileSizeConverter"/>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <conv:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>
        <conv:RiskLevelToBrushConverter x:Key="RiskToBrush"/>
        <conv:PercentageToWidthConverter x:Key="PercentageToWidth"/>
        <conv:DateTimeToRelativeConverter x:Key="RelativeTime"/>
        <conv:BoolToIconConverter x:Key="BoolToIcon"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource SurfaceBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1"
                Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="ðŸ’¾" FontSize="28" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Disk Analyzer" FontSize="20" FontWeight="Bold" 
                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Text="Analyze and optimize your storage" FontSize="12" 
                                   Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Drive Selection -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="24,0">
                    <ComboBox ItemsSource="{Binding AvailableDrives}" 
                              SelectedItem="{Binding SelectedDrive}"
                              Width="200" Margin="0,0,8,0"
                              VerticalContentAlignment="Center">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}" FontWeight="Medium" Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding VolumeLabel}" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    <TextBlock Text=" - " Foreground="{DynamicResource TextMutedBrush}"/>
                                    <TextBlock Text="{Binding AvailableFreeSpace, Converter={StaticResource FileSizeConverter}}" 
                                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    <TextBlock Text=" free" Foreground="{DynamicResource TextMutedBrush}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    
                    <Button Content="ðŸ“ Browse" Command="{Binding BrowseFolderCommand}" 
                            Style="{StaticResource OutlineButton}" Margin="0,0,8,0"/>
                    
                    <Button Content="ðŸ”„" Command="{Binding RefreshDrivesCommand}" 
                            Style="{StaticResource OutlineButton}" ToolTip="Refresh drives" Padding="8,8"/>
                </StackPanel>
                
                <!-- Scan Controls -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <!-- Theme Toggle -->
                    <Button Command="{Binding ToggleDarkModeCommand}"
                            Style="{StaticResource OutlineButton}" Margin="0,0,4,0"
                            ToolTip="Toggle Dark/Light Mode" Padding="8,8">
                        <TextBlock Text="{Binding IsDarkMode, Converter={StaticResource BoolToIcon}, ConverterParameter='â˜€ï¸|ðŸŒ™'}" 
                                   FontSize="16"/>
                    </Button>
                    
                    <!-- Accent Color Toggle (only visible in dark mode) -->
                    <Button Command="{Binding ToggleRedAccentCommand}"
                            Style="{StaticResource OutlineButton}" Margin="0,0,16,0"
                            ToolTip="Toggle Red/Green Terminal Color"
                            Visibility="{Binding IsDarkMode, Converter={StaticResource BoolToVisibility}}"
                            Padding="8,8">
                        <TextBlock Text="{Binding IsRedAccent, Converter={StaticResource BoolToIcon}, ConverterParameter='ðŸŸ¢|ðŸ”´'}" 
                                   FontSize="16"/>
                    </Button>
                    
                    <!-- Restore Cached Scan -->
                    <Button Command="{Binding RestoreCachedScanCommand}"
                            Style="{StaticResource SecondaryButton}" Margin="0,0,8,0"
                            ToolTip="{Binding CachedScanInfo}"
                            Visibility="{Binding HasCachedScan, Converter={StaticResource BoolToVisibility}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“‚ Restore Last Scan" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <!-- Export Buttons -->
                    <Button Content="ðŸ“Š CSV" Command="{Binding ExportToCsvCommand}"
                            Style="{StaticResource OutlineButton}" Margin="0,0,4,0"
                            ToolTip="Export results to CSV"
                            IsEnabled="{Binding CanExport}"/>
                    <Button Content="ðŸ“‹ JSON" Command="{Binding ExportToJsonCommand}"
                            Style="{StaticResource OutlineButton}" Margin="0,0,16,0"
                            ToolTip="Export results to JSON"
                            IsEnabled="{Binding CanExport}"/>
                    
                    <Button Content="â–¶ Start Scan" Command="{Binding StartScanCommand}"
                            Style="{StaticResource PrimaryButton}" Margin="0,0,8,0"
                            IsEnabled="{Binding CanStart}"/>
                    <Button Content="â¸ Pause" Command="{Binding PauseScanCommand}"
                            Style="{StaticResource OutlineButton}" Margin="0,0,8,0"
                            Visibility="{Binding CanPause, Converter={StaticResource BoolToVisibility}}"/>
                    <Button Content="â–¶ Resume" Command="{Binding ResumeScanCommand}"
                            Style="{StaticResource SecondaryButton}" Margin="0,0,8,0"
                            Visibility="{Binding CanResume, Converter={StaticResource BoolToVisibility}}"/>
                    <Button Content="â¹ Stop" Command="{Binding StopScanCommand}"
                            Style="{StaticResource DangerButton}"
                            Visibility="{Binding CanStop, Converter={StaticResource BoolToVisibility}}"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Progress Bar -->
        <Border Grid.Row="1" Background="{DynamicResource SurfaceBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1"
                Padding="24,12" 
                Visibility="{Binding CanStop, Converter={StaticResource BoolToVisibility}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <ProgressBar Value="{Binding ScanProgress.ProgressPercentage, Mode=OneWay}" 
                                 Maximum="100" Style="{StaticResource ScanProgressBar}" Margin="0,0,0,8"/>
                    <TextBlock Text="{Binding ScanProgress.CurrentFolder}" 
                               FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}"
                               TextTrimming="CharacterEllipsis"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="24,0,0,0">
                    <TextBlock Text="{Binding ScanProgress.FilesScanned, StringFormat={}{0:N0} files}" 
                               Margin="0,0,16,0" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <TextBlock Text="{Binding ScanProgress.FoldersScanned, StringFormat={}{0:N0} folders}" 
                               Margin="0,0,16,0" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <TextBlock Text="{Binding ScanProgress.BytesScanned, Converter={StaticResource FileSizeConverter}}" 
                               FontWeight="Medium" Foreground="{DynamicResource PrimaryBrush}"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <TabControl Grid.Row="2" Style="{StaticResource ModernTabControl}" Margin="24,16">
            
            <!-- Overview Tab -->
            <TabItem Header="ðŸ“Š Overview" Style="{StaticResource ModernTabItem}">
                <Grid Margin="0,16,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Category Breakdown - Two Column Layout -->
                    <Border Grid.Column="0" Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,8,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Left: Pie Chart with Clickable Legend -->
                            <StackPanel Grid.Column="0" Width="220">
                                <TextBlock Text="File Categories" Style="{StaticResource SectionHeader}"/>
                                <lvc:PieChart Series="{Binding CategorySeries}" 
                                              Height="150" Width="150"
                                              TooltipPosition="Hidden"
                                              LegendPosition="Hidden"
                                              Margin="0,0,0,8"/>
                                
                                <!-- Clickable Category Legend -->
                                <ItemsControl ItemsSource="{Binding CategorySeries}" MaxHeight="120">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Command="{Binding DataContext.SelectCategoryCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding Name}"
                                                    HorizontalContentAlignment="Left"
                                                    Padding="4,2" Margin="0,1"
                                                    Cursor="Hand">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                        <Setter Property="BorderThickness" Value="0"/>
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}" 
                                                                            Padding="{TemplateBinding Padding}"
                                                                            CornerRadius="3">
                                                                        <ContentPresenter/>
                                                                    </Border>
                                                                    <ControlTemplate.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
                                                                        </Trigger>
                                                                    </ControlTemplate.Triggers>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </Button.Style>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="â—" FontSize="10" VerticalAlignment="Center" Margin="0,0,6,0"
                                                               Foreground="{DynamicResource PrimaryBrush}"/>
                                                    <TextBlock Text="{Binding Name}" FontSize="11"
                                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                                               TextTrimming="CharacterEllipsis" MaxWidth="180"/>
                                                </StackPanel>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                            
                            <!-- Right: Scrollable File List -->
                            <Grid Grid.Column="1" Margin="12,0,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="{Binding SelectedCategoryName, TargetNullValue='Select a category'}" 
                                               FontWeight="SemiBold" FontSize="14"
                                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <TextBlock Text="{Binding CategoryFiles.Count, StringFormat=' ({0} files)'}" 
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               Visibility="{Binding SelectedCategoryName, Converter={StaticResource BoolToVisibility}}"/>
                                </StackPanel>
                                
                                <DataGrid Grid.Row="1" ItemsSource="{Binding CategoryFiles}" 
                                          Style="{StaticResource DataGridStyle}"
                                          MaxHeight="200">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                        <DataGridTextColumn Header="Size" Binding="{Binding SizeFormatted}" Width="70"/>
                                        <DataGridTemplateColumn Header="" Width="35">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Content="ðŸ“‚" 
                                                            Command="{Binding DataContext.OpenInExplorerCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource OutlineButton}" 
                                                            Padding="2" Cursor="Hand"
                                                            ToolTip="Open file location"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Grid>
                    </Border>
                    
                    <!-- Largest Folders -->
                    <Border Grid.Column="1" Grid.Row="0" Style="{StaticResource CardStyle}" Margin="8,0,0,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="Largest Folders" Style="{StaticResource SectionHeader}"/>
                                <lvc:CartesianChart Grid.Row="1" Series="{Binding TopFoldersSeries}" Height="120"/>
                                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" MaxHeight="150" Margin="0,8,0,0">
                                    <ItemsControl ItemsSource="{Binding LargestFolders}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Button Command="{Binding DataContext.SelectFolderCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        CommandParameter="{Binding Name}"
                                                        Background="Transparent" BorderThickness="0" Cursor="Hand"
                                                        HorizontalContentAlignment="Stretch" Padding="4,2">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="ðŸ“" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                                        <TextBlock Text="{Binding Name}" Foreground="{DynamicResource ForegroundBrush}" VerticalAlignment="Center"/>
                                                        <TextBlock Text="{Binding SizeFormatted, StringFormat=' ({0})'}" 
                                                                   Foreground="{DynamicResource SecondaryTextBrush}" 
                                                                   VerticalAlignment="Center" Margin="4,0,0,0"/>
                                                    </StackPanel>
                                                </Button>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Grid>
                            <Grid Grid.Column="1" Margin="16,0,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="{Binding SelectedFolderName, TargetNullValue='Click a folder to see contents'}" 
                                           Style="{StaticResource SectionHeader}" FontSize="14"/>
                                <DataGrid Grid.Row="1" ItemsSource="{Binding FolderContents}" 
                                          Style="{StaticResource DataGridStyle}"
                                          MaxHeight="200" Margin="0,8,0,0">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                        <DataGridTextColumn Header="Size" Binding="{Binding SizeFormatted}" Width="80" SortMemberPath="Size"/>
                                        <DataGridTemplateColumn Header="" Width="40">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Content="ðŸ“‚" 
                                                            Command="{Binding DataContext.OpenLocationCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding Path}"
                                                            Style="{StaticResource SecondaryButton}"
                                                            Padding="4,2" FontSize="12" ToolTip="Open Location"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Grid>
                    </Border>
                    
                    <!-- Games Section -->
                    <Border Grid.Column="0" Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,8,8,0">
                        <StackPanel>
                            <TextBlock Text="ðŸŽ® Game Installations" Style="{StaticResource SectionHeader}"/>
                            <DataGrid ItemsSource="{Binding Games}" 
                                      Style="{StaticResource DataGridStyle}"
                                      MaxHeight="200">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                    <DataGridTextColumn Header="Platform" Binding="{Binding Platform}" Width="80"/>
                                    <DataGridTextColumn Header="Size" Binding="{Binding SizeFormatted}" Width="80"/>
                                    <DataGridTextColumn Header="Last Played" Binding="{Binding LastPlayed, Converter={StaticResource RelativeTime}}" Width="100"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Cleanup Suggestions -->
                    <Border Grid.Column="1" Grid.Row="1" Style="{StaticResource CardStyle}" Margin="8,8,0,0">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="ðŸ§¹ Cleanup Suggestions" Style="{StaticResource SectionHeader}"/>
                                <Button Grid.Column="1" 
                                        Command="{Binding QuickCleanCommand}"
                                        Visibility="{Binding HasQuickCleanItems, Converter={StaticResource BoolToVisibility}}"
                                        Style="{StaticResource ModernButton}"
                                        Background="#4CAF50"
                                        Padding="12,6"
                                        ToolTip="Clean all safe/low-risk items with one click">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="âš¡ Quick Clean" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding QuickCleanInfo}" Margin="8,0,0,0" Opacity="0.9"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                            <DataGrid ItemsSource="{Binding CleanupSuggestions}" 
                                      Style="{StaticResource DataGridStyle}"
                                      MaxHeight="200">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                                    <DataGridTextColumn Header="Savings" Binding="{Binding SavingsFormatted}" Width="80"/>
                                    <DataGridTemplateColumn Header="Risk" Width="60">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding RiskLevel}" 
                                                           Foreground="{Binding RiskLevel, Converter={StaticResource RiskToBrush}}"
                                                           FontWeight="Medium"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
            
            <!-- Treemap Tab -->
            <TabItem Header="ðŸ—ºï¸ Treemap" Style="{StaticResource ModernTabItem}">
                <Grid Margin="0,16,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Treemap Header -->
                    <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,8" Padding="12">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ—ºï¸ Storage Treemap" Style="{StaticResource SectionHeader}" Margin="0"/>
                            <TextBlock Text=" - Double-click folders to zoom in, right-click to go back" 
                                       Foreground="{DynamicResource TextSecondaryBrush}" 
                                       VerticalAlignment="Center" Margin="16,0,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Treemap Visualization -->
                    <Border Grid.Row="1" Style="{StaticResource CardStyle}" Padding="4">
                        <ctrl:TreemapControl x:Name="TreemapView"
                                             SourceItem="{Binding ScanResult.RootItem}"
                                             MaxDepth="5"
                                             IsDarkMode="{Binding IsDarkMode}"
                                             TileClicked="TreemapView_TileClicked"/>
                    </Border>
                </Grid>
            </TabItem>
            
            <!-- File Explorer Tab -->
            <TabItem Header="ðŸ“ File Explorer" Style="{StaticResource ModernTabItem}">
                <Grid Margin="0,16,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Folder Tree -->
                    <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,8,0">
                        <StackPanel>
                            <TextBlock Text="Folder Structure" Style="{StaticResource SectionHeader}"/>
                            <TreeView ItemsSource="{Binding RootItems}" 
                                      SelectedItemChanged="TreeView_SelectedItemChanged"
                                      VirtualizingStackPanel.IsVirtualizing="True"
                                      VirtualizingStackPanel.VirtualizationMode="Recycling"
                                      MaxHeight="500">
                                <TreeView.ItemTemplate>
                                    <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding IsFolder, Converter={StaticResource BoolToVisibility}, ConverterParameter=ðŸ“}" 
                                                       Margin="0,0,6,0"/>
                                            <TextBlock Text="{Binding Name}" FontWeight="Medium"/>
                                            <TextBlock Text=" - " Foreground="{DynamicResource TextMutedBrush}"/>
                                            <TextBlock Text="{Binding SizeFormatted}" 
                                                       Foreground="{DynamicResource TextSecondaryBrush}"/>
                                            <TextBlock Text="{Binding PercentageOfParent, StringFormat=' ({0:F1}%)'}" 
                                                       Foreground="{DynamicResource TextMutedBrush}"/>
                                        </StackPanel>
                                    </HierarchicalDataTemplate>
                                </TreeView.ItemTemplate>
                            </TreeView>
                        </StackPanel>
                    </Border>
                    
                    <!-- File Details -->
                    <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="8,0,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Selected Item Details -->
                            <StackPanel Grid.Row="0" Visibility="{Binding SelectedItem, Converter={StaticResource BoolToVisibility}}">
                                <TextBlock Text="Selected Item" Style="{StaticResource SectionHeader}"/>
                                <Grid Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Path:" Style="{StaticResource DataLabel}" Margin="0,0,16,4"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedItem.FullPath}" 
                                               Style="{StaticResource DataValue}" TextTrimming="CharacterEllipsis"/>
                                    
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Size:" Style="{StaticResource DataLabel}" Margin="0,0,16,4"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedItem.SizeFormatted}" 
                                               Style="{StaticResource DataValue}"/>
                                    
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Last Accessed:" Style="{StaticResource DataLabel}" Margin="0,0,16,4"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedItem.LastAccessed, Converter={StaticResource RelativeTime}}" 
                                               Style="{StaticResource DataValue}"/>
                                    
                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Modified:" Style="{StaticResource DataLabel}" Margin="0,0,16,4"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedItem.LastModified, StringFormat={}{0:g}}" 
                                               Style="{StaticResource DataValue}"/>
                                </Grid>
                                
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="ðŸ“‚ Open in Explorer" 
                                            Command="{Binding OpenInExplorerCommand}" 
                                            CommandParameter="{Binding SelectedItem}"
                                            Style="{StaticResource OutlineButton}" Margin="0,0,8,0"/>
                                    <Button Content="ðŸ“‹ Copy Path" 
                                            Command="{Binding CopyPathCommand}" 
                                            CommandParameter="{Binding SelectedItem}"
                                            Style="{StaticResource OutlineButton}"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <!-- Children List -->
                            <DataGrid Grid.Row="1" ItemsSource="{Binding SelectedItem.Children}" 
                                      Style="{StaticResource DataGridStyle}" Margin="0,16,0,0">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                    <DataGridTextColumn Header="Size" Binding="{Binding SizeFormatted}" Width="100"/>
                                    <DataGridTextColumn Header="Type" Binding="{Binding Category}" Width="80"/>
                                    <DataGridTextColumn Header="Last Accessed" Binding="{Binding LastAccessed, Converter={StaticResource RelativeTime}}" Width="120"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
            
            <!-- Largest Files Tab -->
            <TabItem Header="ðŸ“ˆ Largest Files" Style="{StaticResource ModernTabItem}">
                <Border Style="{StaticResource CardStyle}" Margin="0,16,0,0">
                    <StackPanel>
                        <TextBlock Text="Top 50 Largest Files" Style="{StaticResource SectionHeader}"/>
                        <DataGrid ItemsSource="{Binding LargestFiles}" 
                                  Style="{StaticResource DataGridStyle}"
                                  MaxHeight="500">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" SortMemberPath="Name"/>
                                <DataGridTextColumn Header="Size" Binding="{Binding SizeFormatted}" Width="100" SortMemberPath="Size"/>
                                <DataGridTextColumn Header="Location" Binding="{Binding FullPath}" Width="300" SortMemberPath="FullPath"/>
                                <DataGridTextColumn Header="Type" Binding="{Binding Category}" Width="80" SortMemberPath="Category"/>
                                <DataGridTextColumn Header="Last Accessed" Binding="{Binding LastAccessed, Converter={StaticResource RelativeTime}}" Width="120" SortMemberPath="LastAccessed"/>
                                <DataGridTemplateColumn Header="" Width="40">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="ðŸ“‚" 
                                                    Command="{Binding DataContext.OpenInExplorerCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource OutlineButton}" Padding="4" Cursor="Hand"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>
            </TabItem>
            
        </TabControl>
        
        <!-- Status Bar -->
        <Border Grid.Row="3" Background="{DynamicResource SurfaceBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0"
                Padding="24,8">
            <Grid>
                <TextBlock Text="{Binding StatusText}" Foreground="{DynamicResource TextSecondaryBrush}" 
                           VerticalAlignment="Center"/>
                <TextBlock Text="{Binding ScanResult.Duration, StringFormat='Scan time: {0:hh\\:mm\\:ss}'}" 
                           HorizontalAlignment="Right" Foreground="{DynamicResource TextMutedBrush}"
                           Visibility="{Binding ScanResult, Converter={StaticResource BoolToVisibility}}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
