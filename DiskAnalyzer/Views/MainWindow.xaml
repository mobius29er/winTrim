<Window x:Class="DiskAnalyzer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:DiskAnalyzer.ViewModels"
        xmlns:conv="clr-namespace:DiskAnalyzer.Converters"
        xmlns:ctrl="clr-namespace:DiskAnalyzer.Controls"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        mc:Ignorable="d"
        Title="WinTrim - Disk Analyzer" 
        Icon="/Assets/wintrim.ico"
        Height="800" Width="1280"
        MinHeight="600" MinWidth="900"
        Background="{DynamicResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen">
    
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    
    <Window.Resources>
        <conv:FileSizeConverter x:Key="FileSizeConverter"/>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <conv:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>
        <conv:RiskLevelToBrushConverter x:Key="RiskToBrush"/>
        <conv:PercentageToWidthConverter x:Key="PercentageToWidth"/>
        <conv:DateTimeToRelativeConverter x:Key="RelativeTime"/>
        <conv:BoolToIconConverter x:Key="BoolToIcon"/>
        <conv:ThemeToIconConverter x:Key="ThemeToIcon"/>
        <conv:SeriesFillToBrushConverter x:Key="SeriesFillToBrush"/>
        
        <!-- File/Folder Context Menu -->
        <ContextMenu x:Key="FileItemContextMenu" 
                     Background="{DynamicResource SurfaceBrush}" 
                     Foreground="{DynamicResource TextPrimaryBrush}">
            <MenuItem Header="ðŸ“‚ Open File Location" 
                      Command="{Binding DataContext.OpenInExplorerCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                      CommandParameter="{Binding}"/>
            <MenuItem Header="ðŸ“‹ Copy Path" 
                      Command="{Binding DataContext.CopyPathCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                      CommandParameter="{Binding}"/>
        </ContextMenu>
        
        <!-- Game Context Menu -->
        <ContextMenu x:Key="GameContextMenu"
                     Background="{DynamicResource SurfaceBrush}" 
                     Foreground="{DynamicResource TextPrimaryBrush}">
            <MenuItem Header="ðŸ“‚ Open Game Folder" 
                      Command="{Binding DataContext.OpenGameFolderCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                      CommandParameter="{Binding}"/>
            <MenuItem Header="ðŸ“‹ Copy Path" 
                      Command="{Binding DataContext.CopyGamePathCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                      CommandParameter="{Binding}"/>
        </ContextMenu>
        
        <!-- Developer Tool Context Menu -->
        <ContextMenu x:Key="DevToolContextMenu"
                     Background="{DynamicResource SurfaceBrush}" 
                     Foreground="{DynamicResource TextPrimaryBrush}">
            <MenuItem Header="ðŸ“‚ Open Location" 
                      Command="{Binding DataContext.OpenDevToolPathCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                      CommandParameter="{Binding}"/>
            <MenuItem Header="ðŸ“‹ Copy Path" 
                      Command="{Binding DataContext.CopyDevToolPathCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                      CommandParameter="{Binding}"/>
        </ContextMenu>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource SurfaceBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1"
                Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="ðŸ’¾" FontSize="28" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Disk Analyzer" FontSize="20" FontWeight="Bold" 
                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Text="Analyze and optimize your storage" FontSize="12" 
                                   Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Drive Selection -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="24,0">
                    <ComboBox ItemsSource="{Binding AvailableDrives}" 
                              SelectedItem="{Binding SelectedDrive}"
                              Width="200" Margin="0,0,8,0"
                              VerticalContentAlignment="Center">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}" FontWeight="Medium" Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding VolumeLabel}" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    <TextBlock Text=" - " Foreground="{DynamicResource TextMutedBrush}"/>
                                    <TextBlock Text="{Binding AvailableFreeSpace, Converter={StaticResource FileSizeConverter}}" 
                                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    <TextBlock Text=" free" Foreground="{DynamicResource TextMutedBrush}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    
                    <Button Content="ðŸ“ Browse" Command="{Binding BrowseFolderCommand}" 
                            Style="{StaticResource OutlineButton}" Margin="0,0,8,0"/>
                    
                    <Button Content="ðŸ”„" Command="{Binding RefreshDrivesCommand}" 
                            Style="{StaticResource OutlineButton}" ToolTip="Refresh drives" Padding="8,8"/>
                </StackPanel>
                
                <!-- Scan Controls -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <!-- Settings Button -->
                    <Button Content="âš™" Command="{Binding ToggleSettingsCommand}"
                            Style="{StaticResource OutlineButton}" 
                            ToolTip="Settings" Padding="10,8" Margin="0,0,8,0"
                            FontSize="16"/>
                    
                    <!-- Theme Selector -->
                    <ComboBox ItemsSource="{Binding AvailableThemes}"
                              SelectedItem="{Binding SelectedTheme}"
                              Margin="0,0,16,0"
                              MinWidth="120"
                              ToolTip="Select Application Theme">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Converter={StaticResource ThemeToIcon}}" 
                                               FontSize="14" Margin="0,0,6,0"/>
                                    <TextBlock Text="{Binding}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    
                    <!-- Restore Cached Scan -->
                    <Button Command="{Binding RestoreCachedScanCommand}"
                            Style="{StaticResource SecondaryButton}" Margin="0,0,8,0"
                            ToolTip="{Binding CachedScanInfo}"
                            Visibility="{Binding HasCachedScan, Converter={StaticResource BoolToVisibility}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“‚ Restore Last Scan" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <!-- Export Buttons -->
                    <Button Content="ðŸ“Š CSV" Command="{Binding ExportToCsvCommand}"
                            Style="{StaticResource OutlineButton}" Margin="0,0,4,0"
                            ToolTip="Export results to CSV"
                            IsEnabled="{Binding CanExport}"/>
                    <Button Content="ðŸ“‹ JSON" Command="{Binding ExportToJsonCommand}"
                            Style="{StaticResource OutlineButton}" Margin="0,0,16,0"
                            ToolTip="Export results to JSON"
                            IsEnabled="{Binding CanExport}"/>
                    
                    <Button Content="â–¶ Start Scan" Command="{Binding StartScanCommand}"
                            Style="{StaticResource PrimaryButton}" Margin="0,0,8,0"
                            IsEnabled="{Binding CanStart}"/>
                    <Button Content="â¸ Pause" Command="{Binding PauseScanCommand}"
                            Style="{StaticResource OutlineButton}" Margin="0,0,8,0"
                            Visibility="{Binding CanPause, Converter={StaticResource BoolToVisibility}}"/>
                    <Button Content="â–¶ Resume" Command="{Binding ResumeScanCommand}"
                            Style="{StaticResource SecondaryButton}" Margin="0,0,8,0"
                            Visibility="{Binding CanResume, Converter={StaticResource BoolToVisibility}}"/>
                    <Button Content="â¹ Stop" Command="{Binding StopScanCommand}"
                            Style="{StaticResource DangerButton}"
                            Visibility="{Binding CanStop, Converter={StaticResource BoolToVisibility}}"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Progress Bar -->
        <Border Grid.Row="1" Background="{DynamicResource SurfaceBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1"
                Padding="24,12" 
                Visibility="{Binding CanStop, Converter={StaticResource BoolToVisibility}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <ProgressBar Value="{Binding ScanProgress.ProgressPercentage, Mode=OneWay}" 
                                 Maximum="100" Style="{StaticResource ScanProgressBar}" Margin="0,0,0,8"/>
                    <TextBlock Text="{Binding ScanProgress.CurrentFolder}" 
                               FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}"
                               TextTrimming="CharacterEllipsis"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="24,0,0,0">
                    <TextBlock Text="{Binding ScanProgress.FilesScanned, StringFormat={}{0:N0} files}" 
                               Margin="0,0,16,0" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <TextBlock Text="{Binding ScanProgress.FoldersScanned, StringFormat={}{0:N0} folders}" 
                               Margin="0,0,16,0" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <TextBlock Text="{Binding ScanProgress.BytesScanned, Converter={StaticResource FileSizeConverter}}" 
                               FontWeight="Medium" Foreground="{DynamicResource PrimaryBrush}"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <TabControl Grid.Row="2" Style="{StaticResource ModernTabControl}" Margin="24,16">
            
            <!-- Overview Tab -->
            <TabItem Header="ðŸ“Š Overview" Style="{StaticResource ModernTabItem}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <Grid Margin="0,16,0,0" MinWidth="600">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" MinWidth="350"/>
                            <ColumnDefinition Width="*" MinWidth="350"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                    
                    <!-- Category Breakdown - Two Column Layout -->
                    <Border Grid.Column="0" Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,8,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Left: Pie Chart with Clickable Legend -->
                            <StackPanel Grid.Column="0" Width="220">
                                <TextBlock Text="File Categories" Style="{StaticResource SectionHeader}"/>
                                <lvc:PieChart Series="{Binding CategorySeries}" 
                                              Height="140" Width="140"
                                              TooltipPosition="Top"
                                              LegendPosition="Hidden"
                                              ChartPointPointerDown="PieChart_ChartPointPointerDown"
                                              Panel.ZIndex="100"
                                              Margin="5,0,0,12"/>
                                
                                <!-- Clickable Category Legend with matching colors -->
                                <ScrollViewer MaxHeight="180" VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding CategorySeries}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Button Command="{Binding DataContext.SelectCategoryCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        CommandParameter="{Binding Name}"
                                                        HorizontalContentAlignment="Left"
                                                        Padding="4,3" Margin="0,1"
                                                        Cursor="Hand">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Background" Value="Transparent"/>
                                                            <Setter Property="BorderThickness" Value="0"/>
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <Border Background="{TemplateBinding Background}" 
                                                                                Padding="{TemplateBinding Padding}"
                                                                                CornerRadius="3">
                                                                            <ContentPresenter/>
                                                                        </Border>
                                                                        <ControlTemplate.Triggers>
                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
                                                                            </Trigger>
                                                                        </ControlTemplate.Triggers>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Style>
                                                    </Button.Style>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Ellipse Width="10" Height="10" VerticalAlignment="Center" Margin="0,0,8,0"
                                                                 Fill="{Binding Fill, Converter={StaticResource SeriesFillToBrush}}"/>
                                                        <TextBlock Text="{Binding Name}" FontSize="11"
                                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                                   TextTrimming="CharacterEllipsis" MaxWidth="175"/>
                                                    </StackPanel>
                                                </Button>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </StackPanel>
                            
                            <!-- Right: Scrollable File List -->
                            <Grid Grid.Column="1" Margin="12,0,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="{Binding SelectedCategoryName, TargetNullValue='Select a category'}" 
                                               FontWeight="SemiBold" FontSize="14"
                                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <TextBlock Text="{Binding CategoryFiles.Count, StringFormat=' ({0} files)'}" 
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               Visibility="{Binding SelectedCategoryName, Converter={StaticResource BoolToVisibility}}"/>
                                </StackPanel>
                                
                                <DataGrid Grid.Row="1" ItemsSource="{Binding CategoryFiles}" 
                                          Style="{StaticResource DataGridStyle}"
                                          MaxHeight="200"
                                          CanUserSortColumns="True">
                                    <DataGrid.RowStyle>
                                        <Style TargetType="DataGridRow" BasedOn="{StaticResource {x:Type DataGridRow}}">
                                            <Setter Property="ContextMenu" Value="{StaticResource FileItemContextMenu}"/>
                                        </Style>
                                    </DataGrid.RowStyle>
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" SortMemberPath="Name"/>
                                        <DataGridTextColumn Header="Size" Binding="{Binding SizeFormatted}" Width="70" SortMemberPath="Size"/>
                                        <DataGridTemplateColumn Header="" Width="35">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Content="ðŸ“‚" 
                                                            Command="{Binding DataContext.OpenInExplorerCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource OutlineButton}" 
                                                            Padding="2" Cursor="Hand"
                                                            ToolTip="Open file location"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Grid>
                    </Border>
                    
                    <!-- Largest Folders -->
                    <Border Grid.Column="1" Grid.Row="0" Style="{StaticResource CardStyle}" Margin="8,0,0,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="Largest Folders" Style="{StaticResource SectionHeader}"/>
                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" MaxHeight="260" Margin="0,8,0,0">
                                    <ItemsControl ItemsSource="{Binding LargestFolders}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Padding="6,4" Margin="0,2" CornerRadius="4"
                                                        Background="Transparent">
                                                    <Border.ContextMenu>
                                                        <ContextMenu Background="{DynamicResource SurfaceBrush}" 
                                                                     Foreground="{DynamicResource TextPrimaryBrush}">
                                                            <MenuItem Header="ðŸ“‚ Open in Explorer" 
                                                                      Command="{Binding DataContext.OpenInExplorerCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                      CommandParameter="{Binding}"/>
                                                            <MenuItem Header="ðŸ“‹ Copy Path" 
                                                                      Command="{Binding DataContext.CopyPathCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                      CommandParameter="{Binding}"/>
                                                        </ContextMenu>
                                                    </Border.ContextMenu>
                                                    <Grid>
                                                        <!-- Background progress bar with transparency -->
                                                        <Border CornerRadius="3" 
                                                                Background="{DynamicResource PrimaryBrush}" 
                                                                Opacity="0.15"
                                                                HorizontalAlignment="Left"
                                                                Width="{Binding PercentageOfParent, Converter={StaticResource PercentageToWidth}, ConverterParameter=200}"/>
                                                        
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            
                                                            <Button Grid.Column="0" 
                                                                    Command="{Binding DataContext.SelectFolderCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                    CommandParameter="{Binding Name}"
                                                                    Background="Transparent" BorderThickness="0" Cursor="Hand"
                                                                    HorizontalContentAlignment="Left" Padding="0">
                                                                <StackPanel Orientation="Horizontal">
                                                                    <TextBlock Text="ðŸ“" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                                                    <TextBlock Text="{Binding Name}" 
                                                                               Foreground="{DynamicResource TextPrimaryBrush}" 
                                                                               VerticalAlignment="Center"
                                                                               TextTrimming="CharacterEllipsis"
                                                                               MaxWidth="140"/>
                                                                </StackPanel>
                                                            </Button>
                                                            
                                                            <TextBlock Grid.Column="1" 
                                                                       Text="{Binding SizeFormatted}" 
                                                                       Foreground="{DynamicResource TextSecondaryBrush}" 
                                                                       VerticalAlignment="Center" 
                                                                       Margin="8,0"
                                                                       FontWeight="Medium"
                                                                       MinWidth="60"
                                                                       TextAlignment="Right"/>
                                                            
                                                            <Button Grid.Column="2" Content="ðŸ“‚" ToolTip="Open in Explorer"
                                                                    Command="{Binding DataContext.OpenInExplorerCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                    CommandParameter="{Binding}"
                                                                    Style="{StaticResource OutlineButton}"
                                                                    Padding="4,2" FontSize="12"/>
                                                        </Grid>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Grid>
                            <Grid Grid.Column="1" Margin="16,0,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="{Binding SelectedFolderName, TargetNullValue='Click a folder to see contents'}" 
                                           Style="{StaticResource SectionHeader}" FontSize="14"/>
                                <DataGrid Grid.Row="1" ItemsSource="{Binding FolderContents}" 
                                          Style="{StaticResource DataGridStyle}"
                                          MaxHeight="200" Margin="0,8,0,0">
                                    <DataGrid.RowStyle>
                                        <Style TargetType="DataGridRow" BasedOn="{StaticResource {x:Type DataGridRow}}">
                                            <Setter Property="ContextMenu" Value="{StaticResource FileItemContextMenu}"/>
                                        </Style>
                                    </DataGrid.RowStyle>
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                        <DataGridTextColumn Header="Size" Binding="{Binding SizeFormatted}" Width="80" SortMemberPath="Size"/>
                                        <DataGridTemplateColumn Header="" Width="40">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Content="ðŸ“‚" 
                                                            Command="{Binding DataContext.OpenLocationCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding Path}"
                                                            Style="{StaticResource SecondaryButton}"
                                                            Padding="4,2" FontSize="12" ToolTip="Open Location"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Grid>
                    </Border>
                    
                    <!-- Games Section -->
                    <Border Grid.Column="0" Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,8,8,0">
                        <StackPanel>
                            <TextBlock Text="ðŸŽ® Game Installations" Style="{StaticResource SectionHeader}"/>
                            <DataGrid ItemsSource="{Binding Games}" 
                                      Style="{StaticResource DataGridStyle}"
                                      MaxHeight="200"
                                      CanUserSortColumns="True">
                                <DataGrid.RowStyle>
                                    <Style TargetType="DataGridRow" BasedOn="{StaticResource {x:Type DataGridRow}}">
                                        <Setter Property="ContextMenu" Value="{StaticResource GameContextMenu}"/>
                                    </Style>
                                </DataGrid.RowStyle>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" SortMemberPath="Name"/>
                                    <DataGridTextColumn Header="Platform" Binding="{Binding Platform}" Width="80" SortMemberPath="Platform"/>
                                    <DataGridTextColumn Header="Size" Binding="{Binding SizeFormatted}" Width="80" SortMemberPath="Size"/>
                                    <DataGridTextColumn Header="Last Played" Binding="{Binding LastPlayed, Converter={StaticResource RelativeTime}}" Width="100" SortMemberPath="LastPlayed"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Border>

                    <!-- Developer Tools Section -->
                    <Border Grid.Column="0" Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,8,8,0" MaxHeight="300">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="ðŸ› ï¸ Developer Tools &amp; Caches" Style="{StaticResource SectionHeader}"/>
                            <TextBlock Grid.Row="1" Text="Large caches from development tools that can be safely cleaned"
                                       Foreground="{DynamicResource TextSecondary}"
                                       FontSize="11"
                                       Margin="0,0,0,8"/>
                            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                                <DataGrid ItemsSource="{Binding DevToolItems}" 
                                          Style="{StaticResource DataGridStyle}"
                                          CanUserSortColumns="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" SortMemberPath="Name"/>
                                    <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="100" SortMemberPath="Category"/>
                                    <DataGridTextColumn Header="Size" Binding="{Binding SizeFormatted}" Width="80" SortMemberPath="SizeBytes"/>
                                    <DataGridTextColumn Header="Risk" Binding="{Binding Risk}" Width="60" SortMemberPath="Risk"/>
                                    <DataGridTemplateColumn Header="" Width="40">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="ðŸ“‚" 
                                                        Command="{Binding DataContext.OpenDevToolPathCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding}"
                                                        ToolTip="Open in Explorer"
                                                        Background="Transparent"
                                                        BorderThickness="0"
                                                        Padding="4,2"
                                                        Cursor="Hand"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                                <DataGrid.RowStyle>
                                    <Style TargetType="DataGridRow" BasedOn="{StaticResource {x:Type DataGridRow}}">
                                        <Setter Property="ToolTip" Value="{Binding Recommendation}"/>
                                        <Setter Property="ContextMenu" Value="{StaticResource DevToolContextMenu}"/>
                                    </Style>
                                </DataGrid.RowStyle>
                                </DataGrid>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                    
                    <!-- Cleanup Suggestions -->
                    <Border Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" Style="{StaticResource CardStyle}" Margin="8,8,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Header -->
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="ðŸ§¹ Cleanup Suggestions" Style="{StaticResource SectionHeader}"/>
                                <Button Grid.Column="1" 
                                        Command="{Binding QuickCleanCommand}"
                                        Visibility="{Binding HasQuickCleanItems, Converter={StaticResource BoolToVisibility}}"
                                        Background="#4CAF50"
                                        Foreground="White"
                                        Padding="12,6"
                                        Cursor="Hand"
                                        ToolTip="Clean all safe/low-risk items with one click">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="âš¡ Quick Clean" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding QuickCleanInfo}" Margin="8,0,0,0" Opacity="0.9"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                            
                            <!-- Expandable Suggestions TreeView -->
                            <Border Grid.Row="1" BorderBrush="{DynamicResource BorderBrush}" 
                                    BorderThickness="1" CornerRadius="4" Background="{DynamicResource SurfaceBrush}">
                                <TreeView ItemsSource="{Binding CleanupSuggestions}"
                                          Background="Transparent" BorderThickness="0"
                                          VirtualizingStackPanel.IsVirtualizing="True">
                                    <TreeView.ItemTemplate>
                                        <HierarchicalDataTemplate ItemsSource="{Binding AffectedFiles}">
                                            <!-- Category Header -->
                                            <Grid Margin="0,4">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Description}" 
                                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                                               FontWeight="SemiBold" FontSize="13"/>
                                                    <TextBlock Text="{Binding Path}" 
                                                               Foreground="{DynamicResource TextMutedBrush}"
                                                               FontSize="11" TextTrimming="CharacterEllipsis"
                                                               MaxWidth="300"/>
                                                </StackPanel>
                                                
                                                <TextBlock Grid.Column="1" Text="{Binding AffectedFiles.Count, StringFormat='{}{0} files'}" 
                                                           Foreground="{DynamicResource TextMutedBrush}"
                                                           VerticalAlignment="Center" Margin="12,0"
                                                           FontSize="11"/>
                                                
                                                <TextBlock Grid.Column="2" Text="{Binding SavingsFormatted}" 
                                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                                           VerticalAlignment="Center" Margin="8,0"
                                                           FontWeight="Medium"/>
                                                
                                                <TextBlock Grid.Column="3" Text="{Binding RiskLevel}" 
                                                           Foreground="{Binding RiskLevel, Converter={StaticResource RiskToBrush}}"
                                                           VerticalAlignment="Center" Width="40"
                                                           FontWeight="Medium" FontSize="11"/>
                                            </Grid>
                                            
                                            <!-- Individual File Template -->
                                            <HierarchicalDataTemplate.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid Margin="20,2,0,2">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        
                                                        <TextBlock Grid.Column="0" Text="{Binding}" 
                                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                                   VerticalAlignment="Center"
                                                                   TextTrimming="CharacterEllipsis"
                                                                   ToolTip="{Binding}"/>
                                                        
                                                        <Button Grid.Column="1" Content="ðŸ“‚" 
                                                                Command="{Binding DataContext.OpenFileLocationCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                CommandParameter="{Binding}"
                                                                Style="{StaticResource OutlineButton}"
                                                                Padding="2" Cursor="Hand" Margin="8,0,0,0"
                                                                ToolTip="Open location"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </HierarchicalDataTemplate.ItemTemplate>
                                        </HierarchicalDataTemplate>
                                    </TreeView.ItemTemplate>
                                </TreeView>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
                </ScrollViewer>
            </TabItem>
            
            <!-- Treemap Tab -->
            <TabItem Header="ðŸ—ºï¸ Treemap" Style="{StaticResource ModernTabItem}">
                <Grid Margin="0,16,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Treemap Header with Controls -->
                    <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,8" Padding="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBlock Text="ðŸ—ºï¸ Storage Treemap" Style="{StaticResource SectionHeader}" Margin="0"/>
                                <TextBlock Text=" - Double-click to zoom, right-click to go back" 
                                           Foreground="{DynamicResource TextSecondaryBrush}" 
                                           VerticalAlignment="Center" Margin="16,0,0,0"/>
                            </StackPanel>
                            
                            <!-- Color Mode Selector -->
                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <TextBlock Text="Color by:" VerticalAlignment="Center" 
                                           Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,8,0"/>
                                <ComboBox ItemsSource="{Binding AvailableTreemapColorModes}"
                                          SelectedItem="{Binding SelectedTreemapColorMode}"
                                          Width="100"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Color Legend -->
                    <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,8" Padding="8,6">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <ItemsControl x:Name="TreemapLegend" ItemsSource="{Binding TreemapLegendItems}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="12,0">
                                            <Rectangle Width="14" Height="14" RadiusX="2" RadiusY="2" Margin="0,0,6,0">
                                                <Rectangle.Fill>
                                                    <SolidColorBrush Color="{Binding Color}"/>
                                                </Rectangle.Fill>
                                            </Rectangle>
                                            <TextBlock Text="{Binding Label}" FontSize="11" VerticalAlignment="Center"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                    
                    <!-- Treemap Visualization -->
                    <Border Grid.Row="2" Style="{StaticResource CardStyle}" Padding="4">
                        <Border Background="Transparent">
                            <ctrl:TreemapControl x:Name="TreemapView"
                                                 SourceItem="{Binding ScanResult.RootItem}"
                                                 MaxDepth="{Binding TreemapMaxDepth}"
                                                 SelectedTheme="{Binding SelectedTheme}"
                                                 ColorScheme="{Binding SelectedTreemapColors}"
                                                 ColorMode="{Binding SelectedTreemapColorMode}"
                                                 TileClicked="TreemapView_TileClicked">
                                <ctrl:TreemapControl.ContextMenu>
                                    <ContextMenu Background="{DynamicResource SurfaceBrush}" 
                                                 Foreground="{DynamicResource TextPrimaryBrush}">
                                        <MenuItem Header="ðŸ“‚ Open Location" 
                                                  Click="TreemapContextMenu_OpenLocation"/>
                                        <MenuItem Header="ðŸ“‹ Copy Path" 
                                                  Click="TreemapContextMenu_CopyPath"/>
                                        <Separator/>
                                        <MenuItem Header="â¬†ï¸ Go Back (Right-click)" 
                                                  Click="TreemapContextMenu_GoBack"/>
                                    </ContextMenu>
                                </ctrl:TreemapControl.ContextMenu>
                            </ctrl:TreemapControl>
                        </Border>
                    </Border>
                </Grid>
            </TabItem>
            
            <!-- File Explorer Tab -->
            <TabItem Header="ðŸ“ File Explorer" Style="{StaticResource ModernTabItem}">
                <Grid Margin="0,16,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350" MinWidth="200" MaxWidth="600"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Folder Tree -->
                    <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,0,0">
                        <StackPanel>
                            <TextBlock Text="Folder Structure" Style="{StaticResource SectionHeader}"/>
                            
                            <!-- Tree View Search and Sort Controls -->
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Search Box -->
                                <TextBox Grid.Column="0"
                                         Text="{Binding TreeSearchText, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="6"
                                         ToolTip="Search folders..."
                                         Margin="0,0,8,0"/>
                                
                                <!-- Sort Dropdown -->
                                <ComboBox Grid.Column="1"
                                          ItemsSource="{Binding TreeSortOptions}"
                                          SelectedItem="{Binding TreeSortBy}"
                                          Width="90"
                                          ToolTip="Sort folders by"/>
                            </Grid>
                            
                            <TreeView ItemsSource="{Binding FilteredRootItems}" 
                                      SelectedItemChanged="TreeView_SelectedItemChanged"
                                      VirtualizingStackPanel.IsVirtualizing="True"
                                      VirtualizingStackPanel.VirtualizationMode="Recycling"
                                      MaxHeight="500">
                                <TreeView.ItemContainerStyle>
                                    <Style TargetType="TreeViewItem" BasedOn="{StaticResource {x:Type TreeViewItem}}">
                                        <Setter Property="ContextMenu" Value="{StaticResource FileItemContextMenu}"/>
                                    </Style>
                                </TreeView.ItemContainerStyle>
                                <TreeView.ItemTemplate>
                                    <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding IsFolder, Converter={StaticResource BoolToVisibility}, ConverterParameter=ðŸ“}" 
                                                       Margin="0,0,6,0" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                            <TextBlock Text="{Binding Name}" FontWeight="Medium" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                            <TextBlock Text=" - " Foreground="{DynamicResource TextMutedBrush}"/>
                                            <TextBlock Text="{Binding SizeFormatted}" 
                                                       Foreground="{DynamicResource TextSecondaryBrush}"/>
                                            <TextBlock Text="{Binding PercentageOfParent, StringFormat=' ({0:F1}%)'}" 
                                                       Foreground="{DynamicResource TextMutedBrush}"/>
                                        </StackPanel>
                                    </HierarchicalDataTemplate>
                                </TreeView.ItemTemplate>
                            </TreeView>
                        </StackPanel>
                    </Border>
                    
                    <!-- Resizable Splitter -->
                    <GridSplitter Grid.Column="1" Width="8" 
                                  Background="Transparent"
                                  HorizontalAlignment="Center" 
                                  VerticalAlignment="Stretch"
                                  Cursor="SizeWE"/>
                    
                    <!-- File Details -->
                    <Border Grid.Column="2" Style="{StaticResource CardStyle}" Margin="0,0,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Selected Item Details -->
                            <StackPanel Grid.Row="0" Visibility="{Binding SelectedItem, Converter={StaticResource BoolToVisibility}}">
                                <TextBlock Text="Selected Item" Style="{StaticResource SectionHeader}"/>
                                <Grid Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Path:" Style="{StaticResource DataLabel}" Margin="0,0,16,4"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedItem.FullPath}" 
                                               Style="{StaticResource DataValue}" TextTrimming="CharacterEllipsis"/>
                                    
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Size:" Style="{StaticResource DataLabel}" Margin="0,0,16,4"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedItem.SizeFormatted}" 
                                               Style="{StaticResource DataValue}"/>
                                    
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Last Accessed:" Style="{StaticResource DataLabel}" Margin="0,0,16,4"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedItem.LastAccessed, Converter={StaticResource RelativeTime}}" 
                                               Style="{StaticResource DataValue}"/>
                                    
                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Modified:" Style="{StaticResource DataLabel}" Margin="0,0,16,4"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedItem.LastModified, StringFormat={}{0:g}}" 
                                               Style="{StaticResource DataValue}"/>
                                </Grid>
                                
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="ðŸ“‚ Open in Explorer" 
                                            Command="{Binding OpenInExplorerCommand}" 
                                            CommandParameter="{Binding SelectedItem}"
                                            Style="{StaticResource OutlineButton}" Margin="0,0,8,0"/>
                                    <Button Content="ðŸ“‹ Copy Path" 
                                            Command="{Binding CopyPathCommand}" 
                                            CommandParameter="{Binding SelectedItem}"
                                            Style="{StaticResource OutlineButton}"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <!-- Filter Controls -->
                            <Border Grid.Row="1" Background="{DynamicResource SurfaceBrush}" 
                                    CornerRadius="4" Padding="8" Margin="0,8,0,8"
                                    Visibility="{Binding SelectedItem, Converter={StaticResource BoolToVisibility}}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBox Grid.Column="0" 
                                             Text="{Binding FileExplorerSearchText, UpdateSourceTrigger=PropertyChanged}"
                                             Background="{DynamicResource BackgroundBrush}"
                                             Foreground="{DynamicResource TextPrimaryBrush}"
                                             BorderBrush="{DynamicResource BorderBrush}"
                                             Padding="8,6" Margin="0,0,8,0">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Style.Triggers>
                                                    <Trigger Property="Text" Value="">
                                                        <Setter Property="Background" Value="{DynamicResource BackgroundBrush}"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                    
                                    <ComboBox Grid.Column="1" 
                                              ItemsSource="{Binding FileExplorerFilterOptions}"
                                              SelectedItem="{Binding FileExplorerFilter}"
                                              Background="{DynamicResource SurfaceBrush}"
                                              Foreground="{DynamicResource TextPrimaryBrush}"
                                              BorderBrush="{DynamicResource BorderBrush}"
                                              Padding="8,6" MinWidth="150"/>
                                </Grid>
                            </Border>
                            
                            <!-- Children List -->
                            <DataGrid Grid.Row="2" ItemsSource="{Binding FilteredChildren}" 
                                      Style="{StaticResource DataGridStyle}" Margin="0,0,0,0"
                                      CanUserSortColumns="True">
                                <DataGrid.RowStyle>
                                    <Style TargetType="DataGridRow" BasedOn="{StaticResource {x:Type DataGridRow}}">
                                        <Setter Property="ContextMenu" Value="{StaticResource FileItemContextMenu}"/>
                                    </Style>
                                </DataGrid.RowStyle>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" SortMemberPath="Name"/>
                                    <DataGridTextColumn Header="Size" Binding="{Binding SizeFormatted}" Width="100" SortMemberPath="Size"/>
                                    <DataGridTextColumn Header="Type" Binding="{Binding Category}" Width="80" SortMemberPath="Category"/>
                                    <DataGridTextColumn Header="Last Accessed" Binding="{Binding LastAccessed, Converter={StaticResource RelativeTime}}" Width="100" SortMemberPath="LastAccessed"/>
                                    <DataGridTemplateColumn Header="" Width="35">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="ðŸ“‚" 
                                                        Command="{Binding DataContext.OpenInExplorerCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource OutlineButton}" 
                                                        Padding="2" Cursor="Hand"
                                                        ToolTip="Open location"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
            
            <!-- Largest Files Tab -->
            <TabItem Header="ðŸ“ˆ Largest Files" Style="{StaticResource ModernTabItem}">
                <Border Style="{StaticResource CardStyle}" Margin="0,16,0,0">
                    <StackPanel>
                        <TextBlock Text="Top 50 Largest Files" Style="{StaticResource SectionHeader}"/>
                        <DataGrid ItemsSource="{Binding LargestFiles}" 
                                  Style="{StaticResource DataGridStyle}"
                                  MaxHeight="500">
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow" BasedOn="{StaticResource {x:Type DataGridRow}}">
                                    <Setter Property="ContextMenu" Value="{StaticResource FileItemContextMenu}"/>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" SortMemberPath="Name"/>
                                <DataGridTextColumn Header="Size" Binding="{Binding SizeFormatted}" Width="100" SortMemberPath="Size"/>
                                <DataGridTextColumn Header="Location" Binding="{Binding FullPath}" Width="300" SortMemberPath="FullPath"/>
                                <DataGridTextColumn Header="Type" Binding="{Binding Category}" Width="80" SortMemberPath="Category"/>
                                <DataGridTextColumn Header="Last Accessed" Binding="{Binding LastAccessed, Converter={StaticResource RelativeTime}}" Width="120" SortMemberPath="LastAccessed"/>
                                <DataGridTemplateColumn Header="" Width="40">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="ðŸ“‚" 
                                                    Command="{Binding DataContext.OpenInExplorerCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource OutlineButton}" Padding="4" Cursor="Hand"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>
            </TabItem>
            
        </TabControl>
        
        <!-- Status Bar -->
        <Border Grid.Row="3" Background="{DynamicResource SurfaceBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0"
                Padding="24,8">
            <Grid>
                <TextBlock Text="{Binding StatusText}" Foreground="{DynamicResource TextSecondaryBrush}" 
                           VerticalAlignment="Center"/>
                <TextBlock Text="{Binding ScanResult.Duration, StringFormat='Scan time: {0:hh\\:mm\\:ss}'}" 
                           HorizontalAlignment="Right" Foreground="{DynamicResource TextMutedBrush}"
                           Visibility="{Binding ScanResult, Converter={StaticResource BoolToVisibility}}"/>
            </Grid>
        </Border>
        
        <!-- Settings Popup Overlay -->
        <Border Grid.RowSpan="4" Background="#80000000" 
                Visibility="{Binding IsSettingsOpen, Converter={StaticResource BoolToVisibility}}"
                MouseLeftButtonDown="SettingsOverlay_MouseDown">
            <Border Background="{DynamicResource SurfaceBrush}" 
                    BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"
                    CornerRadius="8" Padding="24" Margin="0,80,0,0"
                    HorizontalAlignment="Right" VerticalAlignment="Top"
                    MinWidth="320" MaxWidth="400">
                <StackPanel>
                    <TextBlock Text="âš™ Settings" FontSize="18" FontWeight="SemiBold" 
                               Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,16"/>
                    
                    <!-- Font Size -->
                    <TextBlock Text="Font Size" Foreground="{DynamicResource TextSecondaryBrush}" 
                               Margin="0,0,0,4" FontSize="{DynamicResource BaseFontSize}"/>
                    <ComboBox ItemsSource="{Binding AvailableFontSizes}"
                              SelectedItem="{Binding SelectedFontSize}"
                              Margin="0,0,0,16" MinWidth="200"/>
                    
                    <!-- Treemap Color Scheme -->
                    <TextBlock Text="Treemap Color Scheme" Foreground="{DynamicResource TextSecondaryBrush}" 
                               Margin="0,0,0,4" FontSize="{DynamicResource BaseFontSize}"/>
                    <ComboBox ItemsSource="{Binding AvailableTreemapColors}"
                              SelectedItem="{Binding SelectedTreemapColors}"
                              Margin="0,0,0,16" MinWidth="200"/>
                    
                    <!-- Treemap Depth -->
                    <TextBlock Text="Treemap Depth" Foreground="{DynamicResource TextSecondaryBrush}" 
                               Margin="0,0,0,4" FontSize="{DynamicResource BaseFontSize}"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <Slider Minimum="1" Maximum="5" 
                                Value="{Binding TreemapMaxDepth}" 
                                Width="180" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding TreemapMaxDepth}" 
                                   Foreground="{DynamicResource TextPrimaryBrush}" 
                                   Margin="12,0,0,0" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    </StackPanel>
                    
                    <!-- Close Button -->
                    <Button Content="Close" Command="{Binding ToggleSettingsCommand}"
                            Style="{StaticResource OutlineButton}" 
                            HorizontalAlignment="Right" Padding="16,8"/>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</Window>
